@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .container {
            position: relative;
            width: 50%;
        }

        .image {
            opacity: 1;
            display: block;
            width: 100%;
            height: auto;
            transition: .5s ease;
            backface-visibility: hidden;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }

        .container:hover .image {
            opacity: 0.3;
        }

        .container:hover .middle {
            opacity: 1;
        }

        .text {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            padding: 16px 32px;
        }
    </style>
</head>
<body>

    <div class="container">
        <img src="~/Content/images/mapa_rysunkowa.jpg" alt="Avatar" class="image" style="width:100%">
        <div class="middle">
            <div class="text"><div class="search-container">
    <form action="/Home/MapView" method="get" data-ajax-target="#map" id="search-form">
        <input id="search-filter" type="text" placeholder="Wpisz nazwę miasta.." name="searchCityName" data-autocomplete-source="@Url.Action("MapView")">

        <button type="submit"><i class="fa fa-search"></i></button>
    </form>
</div></div>
        </div>
    </div>

</body>
</html>